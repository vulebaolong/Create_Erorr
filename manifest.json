{
    "name": "MAGIC",
    "description": "HELLO",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": ["identity", "identity.email"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "options_page": "option/options.html",
    "web_accessible_resources": [
      {
        "resources": [ "Fonts/*.*", "*.ttf", "*.eot", "*.svg", "*.woff", "*.woff2" ],
        "matches": [ "https://web-accessible-resources-1.glitch.me/*","http://*/*", "https://*/*" ]
      }
    ],
    "content_scripts": [
        {
          "matches": ["https://*.force.com/*", "https://cs.shopee.vn/portal/*","https://cs.uat.shopee.vn/portal/inhouse/*", "https://docs.google.com/spreadsheets/*"],
          "css": ["css/style.css"],
          "js": ["js/index.js"],
          "all_frames": true
        }
    ]
}
